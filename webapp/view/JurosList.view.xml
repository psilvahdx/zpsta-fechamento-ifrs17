<mvc:View controllerName="portoseguro.zpstafechifrs17app.controller.JurosList" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:tnt="sap.tnt" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:fb="sap.ui.comp.filterbar" xmlns:f="sap.f">
    <f:DynamicPage headerExpanded="true" busy="{JurosListView>/busy}">      
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar id="filterbar" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" clear=".onClearFilter" showClearOnFB="true" showFilterConfiguration="false">
                        <fb:filterItems>                           
                            <fb:FilterItem name="Ano" label="{i18n>ano_txt}">
                                <fb:control>
                                    <DatePicker displayFormat="yyyy" valueFormat="yyyy" />
                                </fb:control>
                            </fb:FilterItem>   
                            <fb:FilterItem name="Mes" label="{i18n>mes_txt}">
                                <fb:control>
                                    <MultiComboBox name="Mes" selectionChange=".onSelectionChange">
                                        <items>
                                            <core:Item key="01" text="01" />
                                            <core:Item key="02" text="02" />
                                            <core:Item key="03" text="03" />
                                            <core:Item key="04" text="04" />
                                            <core:Item key="05" text="05" />
                                            <core:Item key="06" text="06" />
                                            <core:Item key="07" text="07" />
                                            <core:Item key="08" text="08" />
                                            <core:Item key="09" text="09" />
                                            <core:Item key="10" text="10" />
                                            <core:Item key="11" text="11" />
                                            <core:Item key="12" text="12" />
                                        </items>
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterItem>                       
                        </fb:filterItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table id="tblJurosIFRS17" width="100%" growing="true" growingScrollToLoad="true" growingThreshold="25" mode="None" itemPress="onTableItemPress" updateFinished="onUpdateFinished" items="{jurosIFRS17Model>/items}">
                <headerToolbar>
                    <OverflowToolbar design="Transparent">
                        <content>
                            <Title textAlign="Begin" text="{i18n>juros_title}" />
                            <ToolbarSpacer />
                            <Button id="btnNavToValidaArq" type="Emphasized" text="{i18n>validar_arquivos_txt}" press=".onNavToValidaArquivos"></Button>
                            <Button id="btnNavToLogError" type="Default" text="{i18n>log_erros_txt}" press=".onNavToLogErros"></Button>
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column demandPopin="true" popinDisplay="Inline" minScreenWidth="Desktop" hAlign="Center">
                        <header>
                            <Text text="{i18n>ano_txt}" width="auto" />
                        </header>
                    </Column>
                    <Column width="auto" demandPopin="true" popinDisplay="Inline" minScreenWidth="Desktop" hAlign="Center">
                        <header>
                            <Text text="{i18n>mes_txt}" width="auto" />
                        </header>
                    </Column>
                    <Column width="auto" demandPopin="true" popinDisplay="Inline" minScreenWidth="Desktop" hAlign="Center">
                        <header>
                            <Text text="{i18n>igpm_txt}" width="auto" tooltip="{i18n>igpm_desc_txt}"  />
                        </header>
                    </Column>
                    <Column width="auto" demandPopin="true" popinDisplay="Inline" minScreenWidth="Desktop" hAlign="Center">
                        <header>
                            <Text text="{i18n>ipca_txt}" width="auto" tooltip="{i18n>ipca_desc_txt}" />
                        </header>
                    </Column>
                    <Column width="auto" demandPopin="true" popinDisplay="Inline" minScreenWidth="Desktop" hAlign="Center" >
                        <header>
                            <Text text="{i18n>pfix_txt}" width="auto" tooltip="{i18n>pfix_desc_txt}" />
                        </header>
                    </Column>                             
                    <Column width="auto" demandPopin="true" popinDisplay="Inline" minScreenWidth="Desktop" hAlign="Center">
                        <header>
                            <Text text="{i18n>tigp_txt}" width="auto" tooltip="{i18n>tigp_rvne_desc_txt}" />                            
                        </header>                        
                    </Column>
                    <Column width="auto" demandPopin="true" popinDisplay="Inline" minScreenWidth="Desktop" hAlign="Center">
                        <header>
                            <Text text="{i18n>tipc_txt}" width="auto" tooltip="{i18n>tipc_desc_txt}" />                            
                        </header>                        
                    </Column>
                    <Column width="auto" demandPopin="true" popinDisplay="Inline" minScreenWidth="Desktop" hAlign="Center">
                        <header>
                            <Text text="{i18n>tpfi_txt}" width="auto"  tooltip="{i18n>tpfi_desc_txt}" />
                        </header>
                    </Column>                   
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press="onJurosItemPress">
                        <cells>
                            <Text text="{jurosIFRS17Model>Ano}"/>
                            <Text text="{jurosIFRS17Model>Mes}" />                            
                            <ObjectStatus
                                icon="{path: 'jurosIFRS17Model>Igpm/Statusarq', formatter:'.formatter.formatStatusIconFechamento'}"
                                tooltip="{path: 'jurosIFRS17Model>Igpm/Statusarq', formatter:'.formatter.formatStatusTextFechamento'}"
                                state="{path: 'jurosIFRS17Model>Igpm/Statusarq', formatter:'.formatter.formatStatusFechamento'}"                                
                            />
                            <ObjectStatus 
                                icon="{path: 'jurosIFRS17Model>Ipca/Statusarq', formatter:'.formatter.formatStatusIconFechamento'}"
                                tooltip="{path: 'jurosIFRS17Model>Ipca/Statusarq', formatter:'.formatter.formatStatusTextFechamento'}" 
                                state="{path: 'jurosIFRS17Model>Ipca/Statusarq', formatter:'.formatter.formatStatusFechamento'}" />                                           
                            <ObjectStatus 
                                icon="{path: 'jurosIFRS17Model>Pfix/Statusarq', formatter:'.formatter.formatStatusIconFechamento'}"
                                tooltip="{path: 'jurosIFRS17Model>Pfix/Statusarq', formatter:'.formatter.formatStatusTextFechamento'}" 
                                state="{path: 'jurosIFRS17Model>Pfix/Statusarq', formatter:'.formatter.formatStatusFechamento'}" />   
                             <ObjectStatus 
                                icon="{path: 'jurosIFRS17Model>Tigp/Statusarq', formatter:'.formatter.formatStatusIconFechamento'}"
                                tooltip="{path: 'jurosIFRS17Model>Tigp/Statusarq', formatter:'.formatter.formatStatusTextFechamento'}" 
                                state="{path: 'jurosIFRS17Model>Tigp/Statusarq', formatter:'.formatter.formatStatusFechamento'}" />
                             <ObjectStatus 
                                icon="{path: 'jurosIFRS17Model>Tipc/Statusarq', formatter:'.formatter.formatStatusIconFechamento'}"
                                tooltip="{path: 'jurosIFRS17Model>Tipc/Statusarq', formatter:'.formatter.formatStatusTextFechamento'}" 
                                state="{path: 'jurosIFRS17Model>Tipc/Statusarq', formatter:'.formatter.formatStatusFechamento'}" /> 
                             <ObjectStatus 
                                icon="{path: 'jurosIFRS17Model>Tpfi/Statusarq', formatter:'.formatter.formatStatusIconFechamento'}"
                                tooltip="{path: 'jurosIFRS17Model>Tpfi/Statusarq', formatter:'.formatter.formatStatusTextFechamento'}" 
                                state="{path: 'jurosIFRS17Model>Tpfi/Statusarq', formatter:'.formatter.formatStatusFechamento'}" />                                                        
                            
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
