        <buttons>            
            <Button type="Default"  text="{i18n>btn_cancelar_txt}" id="displayCancel" press="onCancel" ariaLabelledBy="editButtonLabel" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
